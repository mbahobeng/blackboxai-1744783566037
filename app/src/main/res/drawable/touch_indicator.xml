<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#80FF4081" /> <!-- Semi-transparent accent color -->
            <stroke
                android:width="2dp"
                android:color="#FF4081" /> <!-- Solid accent color -->
        </shape>
    </item>
    <!-- Inner crosshair -->
    <item>
        <rotate android:fromDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#FF4081" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#FF4081" />
            </shape>
        </rotate>
    </item>
</layer-list>
